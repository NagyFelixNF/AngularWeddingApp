{
  "extends": "../tsconfig.base.json",
  "importHelpers": true,
  "compileOnSave": true,
  "compilerOptions": {
    "importHelpers": true,
    "experimentalDecorators": true, 
    "outDir": "../out-tsc/app",
    "baseUrl": "./"
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "../node_modules/@nebular/**/*.spec.ts"
  ],
  "include": [
    "../src/*.ts",
    "../src/*.service.ts",
    "../node_modules/@nebular/**/*.ts"
  ]
}
